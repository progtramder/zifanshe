.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.cover image {
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 50rpx;
  font-weight: bold;
}
.product-brief{
  background-color: white;
  color: gray;
  padding: 30rpx 50rpx;
  white-space: pre-wrap;
}

.product-price-container {
  padding: 30rpx 50rpx;
  background-color: white;
}

.product-price-wrapper {
  display: flex;
}
.product-price {
  color: red;
}
.product-price-original {
  color: red;
  margin-left: 30rpx;
  text-decoration: line-through;
}
.price_description {
  color: red;
  font-size: 25rpx;
}
.product-container {
  margin-top: 5rpx;
  width: 100%;
  background-color: white;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-bottom: 110rpx;
}
.product-content-title {
  background-color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  font-weight: bold;
}
.product-content {
  display: flex;
  flex-direction: column;
}

.product-text {
  width: 650rpx;
  margin: 20rpx 0;
  white-space: pre-wrap;
}
.product-image {
  width: 650rpx;
  margin-bottom: 20rpx;
}
.product-document {
  width: 650rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}
.document-image {
  width: 180rpx;
  height: 180rpx;
  box-sizing: border-box;
}
.document-locker {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 10rpx;
  left: 50%;
  transform: translateX(70rpx);
  z-index: 100;
}

.float-bar {
  color: white;
}

.product-video {
  height: 500rpx;
  width: 650rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.product-video video {
  width: 100%;
  height: 500rpx;
}
.video-mask {
  position: absolute;
  width: 120rpx;
  height: 150rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: black;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.mask-button {
  display: block;
  width: 70rpx;
  height: 70rpx;
}
.video-locker {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -15rpx;
  left: 50%;
  transform: translateX(310rpx);
}
.cover {
  width: 100%;
  background-color: #F2F6FC;
  margin-bottom: 10rpx;
  position: relative;
}
.cover-image {
  width: 100%;
  max-height: 500rpx;
}

.selected-type {
  background-color: white;
  padding: 20rpx;
  padding-bottom: 20rpx;
  font-weight: bold;
}
 .selected-type radio-group {
   margin-top: 20rpx;
   display: flex;
   flex-wrap: wrap;
   justify-content: space-evenly;
 }
.product-info-item {
  display: flex;
  flex-direction: row;
  padding-top: 10rpx;
  border-bottom-color: #f0f0f0;
  border-bottom-width: .1rpx;
  border-bottom-style: solid;
  padding-left: 20rpx;
  background-color: white;
}

.product-info-item > view {
  width: 150rpx;
}
.product-info-item > input {
  color: gray;
}

.product-info-item > textarea {
  color: gray;
  width: 100%;
  height: 200rpx;
}

.float-bar {
  color: white;
}

.product-container {
  width: 100%;
  background-color: white;
  margin: 0 0 150rpx;
  padding: 0 25rpx;
}

.product-content {
  height: 500rpx;
  width: 700rpx;
  position: relative;
}
.product-content video {
  width: 100%;
  height: 500rpx;
}

.product-content > text {
  position: absolute;
  transform: translateY(150rpx);
  text-align: center;
}

.overlap-image {
  z-index: 100;
}

.document-image {
  position: absolute;
  transform: translate(-50%, -50%);
  top: 50%;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
}
.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.cover image {
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 50rpx;
  font-weight: bold;
}
.product-brief{
  background-color: white;
  color: gray;
  padding: 30rpx 50rpx;
  white-space: pre-wrap;
  margin-bottom: 5rpx;
}
.product-price{
  background-color: white;
  padding: 30rpx 50rpx;
  color: red;
  margin-bottom: 5rpx;
}

.product-container {
  width: 100%;
  background-color: white;
  margin: 0 0 100rpx;
  padding: 0 25rpx;
}

.product-content {
  height: 500rpx;
  width: 700rpx;
  position: relative;
}

.product-content video {
  width: 100%;
  height: 500rpx;
}

.document-image {
  width: 100%;
  height: 500rpx;
}

.overlap-image {
  width: 150rpx;
  height: 150rpx;
}